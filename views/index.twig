<!doctype html>
<html lang="fr" ng-app>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Misc is Life</title>
    <link rel="shortcut icon" href="/public/img/favicon.ico" type="image/x-icon" />
</head>
<link rel="stylesheet" href="/public/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<script src="/public/js/jquery-3.3.1.min.js"></script>
<script src="/public/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.7/angular.min.js"></script>
<body>


<div class="container">
    <!-- Static navbar -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i style="font-size:24px" class="fa fa-cube"></i></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Get started</a></li>
                    <li><a href="#">Doc</a></li>
                    <li><a href="/communauty">Communauty</a></li>
                    <hr>
                    <form method="POST" action="/stripe/charge">
                        <input type="number" class="form-control" name="amount" id="amount_stripe_custom" placeholder="00.00" min="0" step="00.01" ng-model="amount_custom"/>
                        {% verbatim %}
                        <div ng-if="">
                              <script src="https://checkout.stripe.com/checkout.js"
                                class="stripe-button"
                                data-key="pk_test_9bxDnvMC2ibAP712AUoJIzR2"
                                data-name="Nous soutenir ?"
                                data-panel-label = "Donate"
                                data-description="Donation pour Misc is Life"
                                data-image="/public/img/donation.png">
                        </script>
                        </div>
                        {% endverbatim %}
                        <script>
                            // Hide default stripe button, be careful there if you
                            // have more than 1 button of that class
                            document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
                        </script>
                        <button type="submit" class="btn btn-danger btn-lg" style="margin: 10px">Donnation <i class="fa fa-heart" aria-hidden="true"></i></button>
                    </form>
                    <hr>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Register</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>

    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1 class="text-center">Misc is life !</h1>
        <p>
            <img class="img-responsive"
                 src="/public/img/home.png" alt="logo wow">
        </p>
        <p class="text-center">API for every wow's miscellaneous, free unlimited and easy !</p>
        <p>
            <button class="btn btn-primary center-block btn-lg" href="#">Get started !</button>
        </p>
    </div>

</div> <!-- /container -->

</body>




<script src="/socket.io/socket.io.js"></script>
<script>
    let socket = io.connect('http://localhost:3000');
    socket.on('connect', function(data) {
        socket.emit('join', 'Hello World from client');
    });
</script>




</html>






